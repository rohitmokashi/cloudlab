# =============================================================================
# AWS K8s Cluster - Example Configuration
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!
# =============================================================================

# AWS Credentials (use environment variables or AWS CLI profile instead)
# aws_access_key = "YOUR_AWS_ACCESS_KEY"
# aws_secret_key = "YOUR_AWS_SECRET_KEY"
aws_region = "ap-south-1"

# Kubernetes Cluster Node Names
control_plane_nodes = ["k8s-cp1"]
worker_nodes        = ["k8s-wk1", "k8s-wk2"]

# EC2 Instance Configuration
instance_type = "t3.medium"

# AMI ID - Leave empty to auto-select latest Ubuntu 22.04
ami_id = ""

# VPC Configuration
vpc_cidr            = "10.0.0.0/16"
public_subnet_cidr  = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"
availability_zone   = "ap-south-1a"

# Cluster name prefix for all resources
cluster_name = "k8s-cluster"

# Admin credentials (use environment variables for sensitive values)
admin_username = "windchill"
# admin_password = "SET_VIA_TF_VAR_admin_password"

# Root volume size (default: 50 GB)
root_volume_size = 50

# Tags
tags = {
  owner       = "your-name"
  environment = "dev"
  project     = "k8s-cluster"
  managed_by  = "terraform"
}
